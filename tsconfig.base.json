{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@platformx/site-page": [
        "libs/site-page/src/index.ts"
      ],
      "@platformx/authoring-apis": [
        "libs/authoring-apis/src/index.ts"
      ],
      "@platformx/authoring-state": [
        "libs/authoring-state/src/index.ts"
      ],
      "@platformx/comment-review": [
        "libs/comment-review/src/index.ts"
      ],
      "@platformx/content": [
        "libs/content/src/index.ts"
      ],
      "@platformx/context-library": [
        "libs/context-library/src/index.ts"
      ],
      "@platformx/micro-frontends": [
        "libs/micro-frontends/src/index.ts"
      ],
      "@platformx/prelems-library": [
        "libs/prelems-library/src/index.ts"
      ],
      "@platformx/theme-library": [
        "libs/theme-library/src/index.ts"
      ],
      "@platformx/user-management": [
        "libs/user-management/src/index.ts"
      ],
      "@platformx/utilities": [
        "libs/utilities/src/index.ts"
      ],
      "@platformx/x-image-render": [
        "libs/x-image-render/src/index.ts"
      ],
      "@platformx/dashboard": [
        "libs/dashboard/src/index.ts"
      ],
      "@platformx/workflow-management": [
        "libs/workflow-management/src/index.ts"
      ],
      "@platformx/site-setting": [
        "libs/site-setting/src/index.ts"
      ],
      "@platformx/x-prelem-library": ["libs/x-prelem-library/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
