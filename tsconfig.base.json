      "@platformx/context-library": ["libs/context-library/src/index.ts"],
      "@platformx/micro-frontends": ["libs/micro-frontends/src/index.ts"],
      "@platformx/prelems-library": ["libs/prelems-library/src/index.ts"],
      "@platformx/theme-library": ["libs/theme-library/src/index.ts"],
      "@platformx/utilities": ["libs/utilities/src/index.ts"],
      "@platformx/workflow-management": [
        "libs/workflow-management/src/index.ts"
      ],
      "@platformx/authoring-apis": ["libs/authoring-apis/src/index.ts"],
      "@platformx/authoring-state": ["libs/authoring-state/src/index.ts"],
      "@platformx/content": ["libs/content/src/index.ts"],
      "@platformx/context-library": ["libs/context-library/src/index.ts"],
      "@platformx/micro-frontends": ["libs/micro-frontends/src/index.ts"],
      "@platformx/prelems-library": ["libs/prelems-library/src/index.ts"],
      "@platformx/theme-library": ["libs/theme-library/src/index.ts"],
      "@platformx/x-image-render": ["libs/x-image-render/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
